<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui attatched top segment">
      <div class="ui divided items">
          <% blog.forEach(function(blog){ %>  
           <div class="item">
               <div class="image">
                   <img src="<%= blog.image %>">
                </div>
               <div class="content">
                   <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title %></a>
                    <div class="meta">
                      <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                       <p><%- blog.body.substring(0,100)%>...</p>
                    </div>
                    <div class="extra">
                       <a  class="ui floated basic red button" href="/blogs/<%= blog._id%>">
                           Read more
                       <i class="right chevron icon"></i>
                       </a>
                    </div>
                </div>
            </div>
             <% }); %>
        </div>
    </div>
</div>    
<% include ./partials/footer %>