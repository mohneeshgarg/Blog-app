<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name= "blog[title]" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]" required>
        </div>
        <div class="field">
            <label>Blog Body</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui secondary big button">
    </form>
</div>
